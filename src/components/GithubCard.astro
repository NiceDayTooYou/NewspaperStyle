---
import { Octokit } from '@octokit/rest';
import type { CollectionEntry } from 'astro:content';
import { Book, GitFork, Star } from 'lucide-preact';

type Props = { repo: NonNullable<CollectionEntry<'posts'>['data']['repo']> };

const octokit = new Octokit({ auth: import.meta.env.GITHUB_TOKEN });
const repo = await octokit.repos
  .get({ owner: import.meta.env.USERNAME, repo: Astro.props.repo })
  .then((res) => res.data);
---

<a
  href={repo.html_url}
  target="_blank"
  rel="nofollow noopener noreferrer"
  aria-label={`Check out the github repo: ${repo.name}. ${repo.description}`}
  class={`flex h-full gap-1 flex-col rounded-md bg-2 p-4 shadow hover:outline-2
          hover:outline hover:outline-brand hover:outline-offset-4`}
>
  <div class="flex items-center gap-2">
    <Book class="h-5 w-5 shrink-0 stroke-brand" />
    <span class="text-brand">{repo.name}</span>
  </div>
  <p class="text-xs">{repo.description}</p>
  <div class="mt-auto flex items-center gap-6 text-xs">
    <div class="flex items-center gap-2">
      <div class="h-3 w-3 shrink-0 rounded-full bg-brand"></div>
      <span>{repo.language}</span>
    </div>
    <div class="flex items-center gap-2">
      <Star class="h-4 w-4 shrink-0" />
      <span>{repo.stargazers_count}</span>
    </div>
    <div class="flex items-center gap-2">
      <GitFork class="h-4 w-4 shrink-0" />
      <span>{repo.forks_count}</span>
    </div>
  </div>
</a>
